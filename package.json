{
  "name": "com.liuxy.cordova.helloworld",
  "displayName": "CordovaDemo",
  "version": "1.0.0",
  "description": "A sample Apache Cordova application that responds to the deviceready event.",
  "private": true,
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build && cordova prepare",
    "android": "react-app-rewired build && cordova run android",
    "ios": "react-app-rewired build && cordova run ios",
    "test": "react-app-rewired test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "eslint ./src",
    "lintfix": "eslint ./src --fix",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{css,less,scss,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "dependencies": {
    "antd-mobile": "^2.2.2",
    "cordova-android": "8.1.0",
    "cordova-ios": "5.0.1",
    "cordova-plugin-abi-filter": "1.2.0",
    "cordova-plugin-add-swift-support": "2.0.2",
    "cordova-plugin-bluetooth": "2.0.4",
    "cordova-plugin-customurlscheme": "5.0.1",
    "cordova-plugin-inappbrowser": "3.2.0",
    "cordova-plugin-qrscanner": "3.0.1",
    "cordova-plugin-splashscreen": "5.0.3",
    "cordova-plugin-statusbar": "2.4.3",
    "cordova-plugin-whitelist": "1.3.4",
    "dva": "^2.3.1",
    "lodash": "^4.17.15",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-scripts": "3.1.2"
  },
  "devDependencies": {
    "customize-cra": "0.7.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "6.4.0",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "3.0.8",
    "lint-staged": "9.4.1",
    "prettier": "1.18.2",
    "react-app-rewired": "^2.1.3",
    "react-test-renderer": "16.9.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {},
      "cordova-plugin-customurlscheme": {
        "URL_SCHEME": "coolapp",
        "ANDROID_SCHEME": " ",
        "ANDROID_HOST": " ",
        "ANDROID_PATHPREFIX": "/"
      },
      "cordova-plugin-statusbar": {},
      "cordova-plugin-splashscreen": {},
      "cordova-plugin-qrscanner": {},
      "cordova-plugin-inappbrowser": {},
      "cordova-plugin-abi-filter": {
        "ABI_FILTER": "armeabi-v7a"
      },
      "cordova-plugin-bluetooth": {}
    },
    "platforms": [
      "android",
      "ios"
    ]
  }
}
